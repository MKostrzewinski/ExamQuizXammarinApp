<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:local="clr-namespace:ExamQuizXammarinApp" 
             x:Class="ExamQuizXammarinApp.CreateAccount"
             Title="Create Account">

    <StackLayout BackgroundColor="#f1d7bb">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
                <Entry x:Name="txtUsername" Placeholder="Username" BackgroundColor="#EAF2F4" Grid.Row="1"></Entry>
                <Entry x:Name="txtPassword" Placeholder="Password" BackgroundColor="#EAF2F4" Grid.Row="2"></Entry>
                <Entry x:Name="txtEmail" Placeholder="Email" BackgroundColor="#EAF2F4" Grid.Row="3"></Entry>
                <Button x:Name="btnAdd" WidthRequest="200" Text="Add" Clicked="BtnAdd_Clicked" BackgroundColor="#EAF2F4" BorderColor="#A4C9D7" Grid.Row="4"/>
        </Grid>
    </StackLayout>

</ContentPage>  