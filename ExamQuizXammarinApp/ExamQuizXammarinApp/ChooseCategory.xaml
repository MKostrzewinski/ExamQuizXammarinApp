<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamQuizXammarinApp.ChooseCategory">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="CategoryPicker"
                Title="Select a category"
                TitleColor="Red">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>History of Art</x:String>
                    <x:String>Mathematics</x:String>
                    <x:String>History</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

            <Label Text="Category: "/>
            <Label x:Name="txt_question_category"/>
            <Label Text="Question: "/>
            <Label x:Name="txt_question"/>
            <Label Text="Answers: "/>
            <Label x:Name="txt_correct_answear"/>
            <Label x:Name="txt_wrong_answear1"/>
            <Label x:Name="txt_wrong_answear2"/>
            <Label x:Name="txt_wrong_answear3"/>
            
            <Button Text="Take Question" Clicked="Button_Clicked_Choose_Category" />
            
                    

        </StackLayout>
    </ContentPage.Content>
</ContentPage>