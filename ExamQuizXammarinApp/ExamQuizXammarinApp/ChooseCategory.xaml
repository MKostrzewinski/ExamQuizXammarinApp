<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamQuizXammarinApp.ChooseCategory">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#f1d7bb">
            <Picker x:Name="CategoryPicker"
                Title="Select a category"
                TitleColor="Red">
                <Picker.ItemsSource BackgroundColor="#EAF2F4">
                <x:Array Type="{x:Type x:String}">
                    <x:String>History of Art</x:String>
                        <x:String>Mathematics</x:String>
                    <x:String>History</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>



            <Button Text="Choose Category" Clicked="Button_Clicked_Choose_Category" BackgroundColor="#EAF2F4" BorderColor="#A4C9D7" />
            
                    

        </StackLayout>
    </ContentPage.Content>
</ContentPage>