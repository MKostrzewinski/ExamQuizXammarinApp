<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamQuizXammarinApp.Game">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Category: "/>
            <Label x:Name="txt_question_category"/>
            <Label Text="Question: "/>
            <Label x:Name="txt_question"/>
            <Label Text="Answers: "/>
            <Button x:Name="txt_correct_answear" IsVisible="False" />
            <Button x:Name="txt_wrong_answear1" IsVisible="False"  />
            <Button x:Name="txt_wrong_answear2" IsVisible="False"  />
            <Button x:Name="txt_wrong_answear3" IsVisible="False"  />
            <Button x:Name="start_button" Text="Start" Clicked="Button_Clicked_Next_Question"/>
            <Button x:Name="next_question_btn" Text="Next Question" Clicked="Button_Clicked_Next_Question" IsVisible="False"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>