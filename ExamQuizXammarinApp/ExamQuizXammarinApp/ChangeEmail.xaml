<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamQuizXammarinApp.ChangeEmail"
             Title="Change Email">
    <!--Pages can be added as references or inline-->

    <StackLayout  BackgroundColor="#f1d7bb">

        <Entry x:Name="txtUsername" Placeholder="Username" BackgroundColor="#EAF2F4"/>
        <Entry x:Name="txtEmail" Placeholder="New Email" BackgroundColor="#EAF2F4"/>
        <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True" BackgroundColor="#EAF2F4"/>
        <Button Text="Submit" Clicked="Button_Clicked_Submit"  BackgroundColor="#EAF2F4" BorderColor="#A4C9D7"/>

    </StackLayout>

</ContentPage>